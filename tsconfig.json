{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
		"rootDir": "src",
		"outDir": "dist",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true
  },
	"exclude": [
		"./node_modules",
		"./dist"
	]
}